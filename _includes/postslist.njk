<ul class="postlist">
{% for post in postslist | reverse %}
{% set wordCount = post.content | striptags | wordcount %}
<li class="postlist-item archive-item">
		<a href="{{ post.url }}" class="postlist-link">{{ post.data.title }}</a>
		<div class="postlist-date">{{ wordCount }} words</div>
	</li>
{% endfor %}
</ul>
